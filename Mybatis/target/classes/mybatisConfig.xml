<?xml version="1.0" encoding="UTF-8" ?>
<!--引入命名空间-->
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!--Mybatis配置详解中的配置体系-->
<configuration>
    <!--1、属性，动态替换数据库配置-->
    <!--导入资源文件，用占位符替换，pre等同于dev-->
    <properties resource="db.properties">
        <!--开启默认值替换-->
        <property name="org.apache.ibatis.parsing.PropertyParser.enable-default-value" value="true"/>
        <!--开启特殊分隔符-->
        <property name="org.apache.ibatis.parsing.PropertyParser.default-value-separator" value="?:"/>
    </properties>
    <!--测试属性-->
    <environments default="pre">
        <environment id="pre">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${db:username?:root}"/>
                <!--当password没有配置时值为root-->
                <property name="password" value="${password?:root}"/>
            </dataSource>
        </environment>
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql:///test"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>
    </environments>
    <!--配置mapper扫描-->
    <mappers>
        <!--1、xml形式-->
        <mapper resource="com/xiao/mapper/FamilyDao.xml"/>
        <!--2、注解形式-->
        <mapper class="com.xiao.dao.UserDao"/>
    </mappers>
</configuration>